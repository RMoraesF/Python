#Triângulo
import math
ladoa=int(input('Qual o tamanho do primeiro lado do triângulo?'))
ladob=int(input('Qual o tamanho do segundo lado do triângulo?'))
ladoc=int(input('Qual o tamanho do terceiro lado do triângulo?'))
print('Os lados do triângulo que você digitou são:')
print(ladoa,ladob,ladoc)
if ladoa < ladob + ladoc and ladob < ladoa + ladoc and ladoc < ladoa + ladob:
    soma=(ladoa+ladob+ladoc)/2
    area=math.sqrt(soma*(soma-ladoa)*(soma-ladob)*(soma-ladoc))
    print ('Os valores informados podem formar um triângulo')
    if ladoa == ladob and ladob == ladoc and ladoc==ladoa:
        print ('O triângulo é equilátero e sua área é: ',area,)
    if ladoa != ladob != ladoc != ladoa:
        print ('O triângulo é escaleno e sua área é: ',area,)
    else:
         print ('O triângulo é isósceles e sua área é: ',area,)
else:
    print ('Os valores informados não podem formar um triângulo')
